{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_event_details'|trans({'%id%': event.id|default('')}) }}</h1><br>
    {% if event is defined and event|length %}
        <table class="table">
            <tbody>
                <tr>
                    <th>{{ 'label_title'|trans }}</th>
                    <td>{{  event.title }}</td>
                </tr>
                <tr>
                    <th>{{ 'label_datetime'|trans }}</th>
                    <td>{{ event.datetime|format_date('long') }}</td>
                </tr>
                <tr>
                    <th>{{ 'label_category'|trans }}</th>
                    <td>{{  event.category.title }}</td>
                </tr>
                <tr>
                    <th>{{ 'label_note'|trans }}</th>
                    <td>{{  event.note }}</td>
                </tr>
                <tr>
                    <th>{{ 'label_created_at'|trans }}</th>
                    <td>{{ event.createdAt|format_date('long') }}</td>
                </tr>
            </tbody>
        </table>
        <p>
            <a class="btn btn-primary" href="{{ url('event_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}