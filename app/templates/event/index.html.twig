{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_event_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'event.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_datetime'|trans, 'event.datetime') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_category'|trans, 'category.title') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.datetime|format_date('long') }}</td>
                    <td>{{ event.category.title }}</td>
                    <td>
                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        <a href="{{ url('event_edit', {id: event.id}) }}" title="{{ 'action_edit'|trans }}">
                            {{ 'action_edit'|trans }}
                        </a>
                        <a href="{{ url('event_delete', {id: event.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}

    <p>
        <a href="{{ url('event_create')}}" title="{{ 'action_create_event'|trans }}">
            {{ 'action_create_event'|trans }}
        </a><br>
        <a href="{{ url('category_index') }}" title="{{ 'action_go_to_category_list'|trans }}">
            {{ 'action_go_to_category_list'|trans }}
        </a><br>
        <a href="{{ url('contact_index') }}" title="{{ 'action_go_to_contact_list'|trans }}">
            {{ 'action_go_to_contact_list'|trans }}
        </a>
    </p>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div>
            <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
        </div>
    {% endif %}
{% endblock %}